/* pages/userinfo/userinfo.wxss */

/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 125rpx;
  height: 125rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

/* 列表 */

.person-list {
  display: flex;
  flex-direction: column;
  align-items: left;
}

.list-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 100rpx;
}

.item-image {
  width: 70rpx;
  height: 70rpx;
  margin-left: 20rpx;
}

.item-text {
  color: black;
  font-size: 40rpx;
  margin-left: 25rpx;
}

.person-line {
  width: 100%;
  height: 1rpx;
  background: whitesmoke;
}

.gray_border {
  width: 100%;
  height: 10rpx;
  background: lavender;
}

.white_border {
  width: 100%;
  height: 25px;
  background: white;
}

.button {
  padding-left: 0px;
  padding-right: 0px;
  line-height: 100rpx;
  background-color: rgba(255, 255, 255, 0);
  margin-left: 25rpx;
}
.button::after {
width:0;
height:0;
top:0;
left:0
}

