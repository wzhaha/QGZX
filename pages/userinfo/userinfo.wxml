<!--分割线-->
<view class='gray_border'></view>

<view class="person-list">

  <view class="list-item">
    <image class="item-image" src="/img/user.jpg"></image>
    <button class="button" bindtap='myinfo' open-type="getUserInfo" bindgetuserinfo="getUserInfo" >个人信息</button>
  </view>

  <view class='person-line'></view>
  <view class="list-item">
    <image class="item-image" src="/img/look.jpg"></image>
    <text class="item-text" bindtap='mytask'>我的值班</text>
  </view>

  <view class='person-line'></view>
  <view class="list-item">
    <image class="item-image" src="/img/set.jpg"></image>
    <text class="item-text" bindtap='set_'>设置</text>
  </view>

  <view class='person-line'></view>
  <view class="list-item">
    <image class="item-image" src="/img/feedback.jpg"></image>
    <text class="item-text" bindtap='about'>关于</text>
  </view>

  <view class='person-line'></view>
  <view class="list-item">
    <image class="item-image" src="/img/feedback.jpg"></image>
    <text class="item-text" bindtap='feedback'>反馈</text>
  </view>

</view>